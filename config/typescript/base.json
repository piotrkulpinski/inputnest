{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Default",
  "baseUrl": ".",
  "compilerOptions": {
    "esModuleInterop": true,
    "declaration": true,
    "incremental": false,
    "isolatedModules": true,
    "lib": [
      "es2022",
      "DOM",
      "DOM.Iterable"
    ],
    "module": "esnext",
    "moduleDetection": "force",
    "moduleResolution": "node",
    "noUncheckedIndexedAccess": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "ES2022"
  }
}
