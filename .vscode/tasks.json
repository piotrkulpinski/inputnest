{
  "version": "2.0.0",
  "presentation": {
    "clear": true,
    "echo": false,
    "focus": true,
    "panel": "new",
    "reveal": "silent",
    "showReuseMessage": true
  },
  "tasks": [
    {
      "type": "shell",
      "label": "dev",
      "command": "bun dev",
      "isBackground": true,
      "dependsOrder": "sequence",
      "runOptions": {
        "runOn": "folderOpen"
      }
    },
    {
      "type": "shell",
      "label": "design",
      "command": "bun storybook",
      "isBackground": true,
      "dependsOrder": "sequence",
      "options": {
        "cwd": "${workspaceFolder}/shared/design/"
      },
      "runOptions": {
        "runOn": "folderOpen"
      }
    },
    // Not automatic tasks
    {
      "type": "shell",
      "label": "stripe: listen",
      "command": "stripe listen --forward-to localhost:8000/api/stripe/webhooks",
      "isBackground": false
    }
  ]
}
